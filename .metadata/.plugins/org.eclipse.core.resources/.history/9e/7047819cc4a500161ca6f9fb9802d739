$(function(){
	$(document).on('contextmenu',function(e){
		e.preventDefault();
		//$('#box').menu('hide');
		$('#box').menu('show',{
			left:e.pageX,
			top:e.pageY,
		});
		//$('#box').menu('destroy');
		console.log($('#box').menu('getItem','#new').id);
		$('#box').menu('setText',{
			target:'#new',
			text:'新新',
		});
		$('#box').menu('setIcon',{
			target:'#new',
			iconCls:'icon-add',
		});
		console.log($('#box').menu('findItem','退出').id);

	});
	
	
});