				alert('add');
			},
		}],
		toolsPosition:'left',
		tabPosition:'right',
		headerWidth:300,
		selected:1,
		closable:true,
		//showHeader:false,
		onSelect:function(title,index){
			alert(title+"  "+index);
		},
		onUnselect:function(title,index){
			
		},
		onBeforeClose:function(){
			
		},
		onClose:function(){
			
		},
		onContextMenu:function(e,title,index){
			alert(e.type)
		}
		
		
	});
